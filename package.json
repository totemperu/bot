{
    "name": "totem-workspace",
    "private": "true",
    "packageManager": "bun@1.3.5",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "clean": "bun x shx rm -rf apps/*/node_modules node_modules",
        "clean:sessions": "bun x shx rm -rf apps/notifier/data/notifier/session apps/notifier/data/notifier/.wwebjs_auth",
        "dev": "bun x concurrently -n notifier,backend,frontend -c cyan,green,blue \"bun run dev:notifier\" \"bun run dev:backend\" \"bun run dev:frontend\"",
        "dev:backend": "cd apps/backend && bun run dev",
        "dev:frontend": "cd apps/frontend && bun run dev",
        "dev:notifier": "cd apps/notifier && bun run dev",
        "build:frontend": "cd apps/frontend && bun run build",
        "build": "bun run build:frontend",
        "seed": "cd apps/backend && bun run seed",
        "deploy": "bash scripts/deploy.sh",
        "format": "biome format --write",
        "format:md": "bun x prettier \"**/*.{md,yml,yaml}\" --write --print-width=80 --prose-wrap=always",
        "preview": "cloudflared tunnel --url http://localhost:5173"
    },
    "devDependencies": {
        "@totem/tsconfig": "workspace:*",
        "@types/bun": "^1.3.5",
        "@types/node": "^25.0.3",
        "bun-types": "^1.3.5",
        "pino": "^10.1.0",
        "typescript": "^5.9.3"
    }
}
